<%= turbo_frame_tag "modal" do %>
  <div class="modal fade show d-block" tabindex="-1" aria-hidden="true" style="background: rgba(0, 0, 0, 0.5);">
    <div class="modal-dialog modal-dialog-centered">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title">List Details</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          <% if notice %>
            <div class="alert alert-success" role="alert">
              <%= notice %>
            </div>
          <% end %>

          <div class="card mb-4">
            <div class="card-body">
              <%= render @list %>
            </div>
          </div>
        </div>
        <div class="modal-footer">
          <%= button_to "Destroy this list", @list, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %>
          <%= link_to "Cancel", @user, class: "btn btn-secondary" %>
        </div>
      </div>
    </div>
  </div>
<% end %>

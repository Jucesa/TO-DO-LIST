<%= turbo_frame_tag "modal" do %>
  <div class="modal">
    <% content_for :title, "New Task" %>

    <h1>New Task</h1>

    <%= render "form", task: @task %>

    <br>

    <div>
      <%= link_to "Cancel", "#", data: {
        controller: "modal",
        action: "click->modal#close"
      }, class: "btn btn-sm btn-outline-danger" %>
    </div>
  </div>
<% end %>
